{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "target": "es2017",
    "lib": [
      "dom",
      "es2017"
    ],
    "outDir": "dist"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    ".next",
    "dist",
    "__mocks__",
    "__tests__"
  ]
}
