{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true
  },

  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "**/*.spec.ts"
  ]
}